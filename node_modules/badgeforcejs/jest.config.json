{
  "name": "badgeforcejs",
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
  "moduleFileExtensions": [
    "ts",
    "js",
    "json",
    "node"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/lib/"
  ],
  "roots": [
    "<rootDir>/src",
    "<rootDir>/test-utils"
  ],
  "collectCoverage": true,
  "mapCoverage": true,
  "coverageDirectory": "<rootDir>/test-coverage",
  "coverageReporters": ["json", "lcov", "text", "html"]
}
