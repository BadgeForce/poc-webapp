pragma solidity ^0.4.15;

library BadgeChain {

    /// @notice a chain represents a course or program where different badges can represents levels or courses completed
    /// has no sequence or order 
    struct UnorderedChain {
        bytes32[] links;
        string name;
        bytes32 chainHash;
        address issuer;
    }

    /// @notice computes hash of chain name and issuer address 
    function getChainHash(string _name, address _issuer) pure public returns (bytes32 chainHash) {
        return keccak256(_name, _issuer);
    }

}